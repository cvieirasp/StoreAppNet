
@if (ViewData.ModelState.ErrorCount > 0)
{
    <div style="padding-top: 15px"></div>

    <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">x</button>
        <h3 id="messageResult" style="padding-top: 20px">Opa! Algo deu errado :(</h3>
        <div style="padding-top: 20px" asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
}

@if (!string.IsNullOrEmpty(ViewBag.Success))
{
    <div style="padding-top: 15px"></div>

    <div id="messageBox" class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">x</button>
        <h3 id="messageResult">@ViewBag.Success</h3>
    </div>
}

@if (TempData["Success"] != null)
{
    <div style="padding-top: 15px"></div>

    <div id="messageBox" class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">x</button>
        <h4 id="messageResult">@Html.Raw(TempData["Success"].ToString())</h4>
    </div>
}
